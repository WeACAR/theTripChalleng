{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET 8 Launch with Hot Reload",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "watch",
      "program": "${workspaceFolder}\\theTripChalleng\\bin\\Debug\\net8.0\\theTripChalleng.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "DOTNET_USE_POLLING_FILE_WATCHER": "1",
        "DOTNET_HOST_PATH": "dotnet"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}
