@* this is the account details page shows user information: Image, Name, Phone Number, Total Points with edit option (for edit all fields) *@
@model theTripChalleng.Models.User

<div class="row">
    <div class="col-md-4">
        <h2>User Details</h2>
        @* if model image is null then set default image to avatar *@
        @if (Model.Image == null)
        {
            <img src="/Img/Avatar.jpg" alt="@Model.Name" class="img-fluid" />
        }
        else
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="@Model.Name" class="img-fluid rounded-circle" />
        }
    </div>
    <div class="col-md-8">
        <h2>@Model.Name</h2>
        <p><strong>Phone Number:</strong> @Model.Phone</p>
        <p><strong>Total Points:</strong> @Model.TotalPoints</p>
        <a href="@Url.Action("Edit", "Account", new { id = Model.Id })" class="btn btn-primary">Edit</a>
    </div>
</div>
