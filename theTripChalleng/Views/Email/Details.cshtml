@model theTripChalleng.Models.Email

@{
    ViewData["Title"] = "Email Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Email Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3"><strong>Date:</strong></div>
            <div class="col-md-9">@Model.CreatedAt.ToString("dddd, MMMM dd, yyyy 'at' HH:mm")</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3"><strong>From:</strong></div>
            <div class="col-md-9">@(Model.SenderNavigation?.Name ?? "Unknown")</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3"><strong>To:</strong></div>
            <div class="col-md-9">@(Model.ReceiverNavigation?.Name ?? "Unknown")</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3"><strong>Message:</strong></div>
            <div class="col-md-9">
                <div class="p-3 bg-light rounded">
                    @Html.Raw(Model.Message?.Replace("\n", "<br />"))
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Emails</a>
</div>
