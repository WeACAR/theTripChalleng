@model theTripChalleng.Controllers.Email.SendEmailViewModel

@{
    ViewData["Title"] = "Send Email";
    var users = ViewData["Users"] as List<theTripChalleng.Models.User> 
                ?? new List<theTripChalleng.Models.User>();
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Send" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ReceiverId" class="form-label">إلى:</label>
                <select asp-for="ReceiverId" class="form-select" required>
                    <option value="">اختر المستلم</option>
                    @if (users.Any())
                    {
                        foreach (var user in users)
                        {
                            <option value="@user.Id">@user.Name</option>
                        }
                    }
                    else
                    {
                        <option value="" disabled>لا يوجد مستخدمون متاحون</option>
                    }
                </select>
                <span asp-validation-for="ReceiverId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Message" class="form-label">الرسالة:</label>
                <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="إرسال البريد الإلكتروني" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
